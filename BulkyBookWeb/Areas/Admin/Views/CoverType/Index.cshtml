@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification"/>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
        <h2 class="text-primary">CoverType List</h2>
        </div>
        <div class="col-6 text-end">
        <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary"><i class="bi bi-patch-plus"></i>Create new CoverType</a>
        </div>
    </div>



<table class ="table table-bordered table-striped " style ="width:100%">
    <thead><tr>
            <th>
         CoverType Name
      
        </th>  
         
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width:"50%">
                    @obj.Name
                </td>
                
                <td>
                    <div class="w-75 btnbtn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Edit"  asp-route-id ="@obj.Id"><i class="bi bi-align-center"></i></a>
                         <a asp-controller="CoverType" asp-action="Delete"  asp-route-id ="@obj.Id"> <i class="bi bi-trash"></i></a>
                    </div>
                </td>
                
            </tr>

        }
    </tbody>
</table>
</div>

