@model IEnumerable<BulkyBook.Models.Product>

<div class="row pb-3">

    @foreach (var p in Model)

    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba;border-radius:5px;">
                    <div class="card">

                        <img src="@p.ImageUrl" class="card-img-top rounded"/> 
                        <div class="card-body">
                        <div class="pl-1">
                            <p class ="card-title h5 text-primary" >@p.Title</p>
                            <p class ="card-title h5 text-secondary" >@p.Author</p>
                        </div>

                        <div class="pl-1">
                            <p>List  Price:<strike><b>$@p.ListPrice.ToString("0.00")</b></strike></p> 
                        </div>
                         <div class="pl-1">
                            <p>As Low As:<b>$@p.Price100.ToString("0.00")</b></p> 
                        </div>
                        </div>
                    </div>
                    <div>
                        <a  asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@p.Id">
                            Details
                        </a>
                    </div>
                </div>

            </div>
        </div>

    }
</div>